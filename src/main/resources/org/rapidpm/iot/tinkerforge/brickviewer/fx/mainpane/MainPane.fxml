<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import org.rapidpm.iot.tinkerforge.brickviewer.fx.mainpane.*?>
<?import org.rapidpm.iot.tinkerforge.brickviewer.fx.mainpane.showdiagram.ShowDiagramButtonCellFactory?>
<?import org.rapidpm.iot.tinkerforge.brickviewer.fx.mainpane.showdiagram.ShowDiagramButtonCellValueFactory?>
<fx:root type="org.rapidpm.iot.tinkerforge.brickviewer.fx.mainpane.MainPane"
         xmlns:fx="http://javafx.com/fxml">
  <children>
    <VBox>
      <children>
        <MenuBar fx:id="menubar">
          <menus>
            <Menu fx:id="menuMain" text="Main">
              <items>
                <MenuItem fx:id="mbtnClose" text="Close" onAction="#mbtnClose"/>
                <MenuItem fx:id="mbtnDemoData" text="nextData" onAction="#mbtnDemoData"/>
              </items>
            </Menu>
          </menus>
        </MenuBar>

        <TabPane fx:id="mainTabPane">
          <tabs>
            <Tab fx:id="connectionsTab" text="connectionsTab">

            </Tab>
            <Tab fx:id="mainDiagramTab" text="mainDiagramTab">
              <BorderPane fx:id="borderPaneMain">
                <top></top>
                <left>
                  <TableView fx:id="brickTable">
                    <columns>
                      <TableColumn fx:id="tcServerIP" text="tcServerIP">
                        <cellValueFactory>
                          <PropertyValueFactory property="server" />
                        </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="tcServerPort" text="tcServerPort">
                        <cellValueFactory>
                          <PropertyValueFactory property="port" />
                        </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="tcMasterUID" text="tcMasterUID">
                        <cellValueFactory>
                          <PropertyValueFactory property="masterUID" />
                        </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="tcBrickletUID" text="tcBrickletUID">
                        <cellValueFactory>
                          <PropertyValueFactory property="brickUID" />
                        </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="tcBrickletType" text="tcBrickletType">
                        <cellValueFactory>
                          <PropertyValueFactory property="brickType" />
                        </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="tcShowDiagram" text="tcShowDiagram" >
                        <cellValueFactory>
                          <ShowDiagramButtonCellValueFactory/>
                        </cellValueFactory>
                        <cellFactory>
                          <ShowDiagramButtonCellFactory/>
                        </cellFactory>
                      </TableColumn>
                      <!--<TableColumn fx:id="tcShowDiagram" text="tcShowDiagram" >-->
                      <!--<cellValueFactory>-->
                      <!--<PropertyValueFactory property="showDiagram"/>-->
                      <!--</cellValueFactory>-->
                      <!--</TableColumn>-->
                    </columns>
                    <items>
                      <FXCollections fx:factory="observableArrayList">
                        <BrickElement server="127.0.0.1"  port="4433" masterUID="UZTREW" brickUID="TTRREE" brickType="Temperatur" showDiagram="false" />
                        <BrickElement server="127.0.0.1"  port="4433" masterUID="aswedf" brickUID="TTRREE" brickType="Temperatur" showDiagram="false" />
                        <BrickElement server="127.0.0.1"  port="4433" masterUID="Uoihef" brickUID="TTRREE" brickType="Temperatur" showDiagram="false" />
                        <BrickElement server="127.0.0.1"  port="4433" masterUID="oiuhsf" brickUID="TTRREE" brickType="Temperatur" showDiagram="false" />
                        <BrickElement server="127.0.0.1"  port="4433" masterUID="servtc" brickUID="TTRREE" brickType="Temperatur" showDiagram="false" />
                      </FXCollections>
                    </items>
                  </TableView>
                </left>
                <center>
                  <VBox fx:id="diagramVBox">

                  </VBox>
                </center>
                <right>

                </right>
                <bottom>

                </bottom>
              </BorderPane>

            </Tab>
          </tabs>

        </TabPane>



      </children>
    </VBox>
  </children>
</fx:root>
